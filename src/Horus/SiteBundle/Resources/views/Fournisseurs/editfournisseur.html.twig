{% extends 'HorusSiteBundle::layout.html.twig' %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}


{% block content %}
    <div id="editarticle">
        <a class="btn back btn-danger pull-right" href="{{ path('horus_site_fournisseurs') }}">&larr; Revenir à la liste des fournisseurs</a>

        <h1><i class="glyphicon glyphicon-pencil"></i> Editer un fournisseur</h1>
        <hr class="clear fancy-line">

        <form novalidate="novalidate" action="{{ path('horus_site_edit_fournisseurs', {'id' : fournisseur.id}) }}" method="post" enctype="multipart/form-data">

            <div class="row-fluid">
                <div class="span12">
                    <label for="title">Titre</label>
                    <div class="input-group">
                        {{ form_widget(form.title) }}
                        <span class="input-group-btn"><button class="btn btn-search btn-primary"><i class="glyphicon glyphicon-pencil"></i></button></span>
                    </div>
                    {{ form_errors(form.title) }}
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    {{ form_widget(form.active) }}
                    {{ form_errors(form.active) }}
                    <label for="isVisible">Visible sur le site</label>
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <label for="cover">Résumé</label>
                    {{ form_widget(form.resume) }}
                    {{ form_errors(form.resume) }}
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <label for="content">Description</label>
                    {{ form_widget(form.description) }}
                    {{ form_errors(form.description) }}
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <label for="tags">Fichier</label>
                    {{ form_widget(form.file) }}
                    {{ form_errors(form.file) }}
                    <img class="img-polaroid" src="{{ imgfournisseurs ~ fournisseur.id ~ '/' ~ fournisseur.path|sizes('small') }}"/>
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <label for="tags">Meta Title</label>
                    {{ form_widget(form.metaTitle) }}
                    {{ form_errors(form.metaTitle) }}
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <label for="tags">Meta Description</label>
                    {{ form_widget(form.metaDescription) }}
                    {{ form_errors(form.metaDescription) }}
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <label for="tags">Meta Keywords</label>
                    {{ form_widget(form.metaKeywords) }}
                    {{ form_errors(form.metaKeywords) }}
                </div>
            </div>

            <button class="btn btn-primary btn-large" type="submit"><i class="glyphicon glyphicon-pencil"></i> Editer une marque</button>
        </form>
    </div>
{% endblock %}

