{% extends 'HorusSiteBundle::layout.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts '@HorusSiteBundle/Resources/public/js/pages/fournisseur.js' %}
    <script src="{{ asset_url }}" type="text/javascript"></script>
    {% endjavascripts %}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets '@HorusSiteBundle/Resources/public/css/pages/fournisseur.sass' filter='yui_css' %}
    <link rel="stylesheet" type="text/css" media="screen" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock %}

{% block content %}
    <div id="createfournisseur" class="page">
        <a class="btn back btn-danger pull-right" href="{{ path('horus_site_fournisseurs') }}">&larr; Revenir à la liste des fournisseurs</a>

        <h1><i class="glyphicon glyphicon-plus"></i> Ajouter une fournisseur</h1>
        <hr class="clear fancy-line">

        <form  novalidate="novalidate" action="{{ path('horus_site_create_fournisseurs') }}" method="post" enctype="multipart/form-data">

            <div class="row-fluid">
                <div class="span12">
                    <label for="title">Titre</label>

                    <div class="input-group">
                        {{ form_widget(form.title) }}
                        <span class="input-group-btn"><button class="btn btn-search btn-primary"><i
                                        class="glyphicon glyphicon-pencil"></i></button></span>
                    </div>
                    {{ form_errors(form.title) }}
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <label for="cover">Résumé</label>
                    {{ form_widget(form.resume) }}
                    {{ form_errors(form.resume) }}
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <label for="content">Description</label>
                    {{ form_widget(form.description) }}
                    {{ form_errors(form.description) }}
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <label for="tags">Fichier</label>
                    {{ form_widget(form.file) }}
                    {{ form_errors(form.file) }}
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    {{ form_widget(form.active) }}
                    {{ form_errors(form.active) }}
                    <label for="isVisible">Visible sur le site</label>
                </div>
            </div>
            <p></p>
            <div class="row-fluid">
                <div class="span12">
                    <label for="tags">Titre de référencement</label>
                    {{ form_widget(form.metaTitle) }}
                    {{ form_errors(form.metaTitle) }}
                </div>
            </div>
            <p></p>
            <div class="row-fluid">
                <div class="span12">
                    <label for="tags">Description de référencement</label>
                    {{ form_widget(form.metaDescription) }}
                    {{ form_errors(form.metaDescription) }}
                </div>
            </div>
            <p></p>
            <div class="row-fluid">
                <div class="span12">
                    <label for="tags">Mot-Clefs de référencement</label>
                    {{ form_widget(form.metaKeywords) }}
                    {{ form_errors(form.metaKeywords) }}
                </div>
            </div>
            <button class="btn btn-primary btn-large" type="submit"><i class="glyphicon glyphicon-plus"></i> Créer un fournisseur</button>
        </form>
    </div>
{% endblock %}

