{% extends 'HorusSiteBundle::layout.html.twig' %}


{% block javascripts %}
    {{ parent() }}

    {% javascripts '@HorusSiteBundle/Resources/public/js/bootstrap-colorpicker.js' %}
    <script src="{{ asset_url }}" type="text/javascript"></script>
    {% endjavascripts %}

    {% javascripts '@HorusSiteBundle/Resources/public/js/configuration.js' %}
    <script src="{{ asset_url }}" type="text/javascript"></script>
    {% endjavascripts %}

{% endblock %}


{% block stylesheets %}
    {{ parent() }}

    {% stylesheets '@HorusSiteBundle/Resources/public/css/colorpicker.css' filter='yui_css' %}
    <link rel="stylesheet" type="text/css" media="screen" href="{{ asset_url }}"/>
    {% endstylesheets %}

{% endblock %}

{% block content %}
    <div class="page" id="configuration">
        <form  action="{{ path('horus_site_configuration') }}" method="post">
            <div class="jumbotron">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                <h2><i class="glyphicon glyphicon-bookmark"></i> <strong>{{ configuration.name }}</strong> - {{ configuration.entreprise }}</h2>
                <h4><i class="glyphicon glyphicon-time"></i> Horaires d'ouvertures: {{ configuration.horaires }}</h4>
                <h4><i class="glyphicon glyphicon-user"></i> Vos identifiants: {{ configuration.nom|title }} {{ configuration.prenom|title }}  <a href="mailto: {{ configuration.email }}"> {{ configuration.email }}</a> </h4>
                <h4><i class="glyphicon glyphicon-map-marker"></i> Vos coordonnées: {{ configuration.adresse }} {{ configuration.zipcode }} {{ configuration.ville }} </h4>
            </div>

            <h2><i class="glyphicon glyphicon-flag"></i> Information</h2>
            <h4><i class="glyphicon glyphicon-info-sign"></i> Général</h4>
            <div class="row-fluid">
                <div class="span4">
                    <label for="nom">Nom de la boutique</label>
                    <div class="input-group">
                        {{ form_widget(form.name) }}
                    </div>
                    {{ form_errors(form.name) }}
                </div>
                <div class="span4">
                    <label for="nom">Horaires</label>
                    <div class="input-group">
                        {{ form_widget(form.horaires) }}
                    </div>
                    {{ form_errors(form.horaires) }}
                </div>
                <div class="span4">
                    <label for="nom">SIRET</label>
                    <div class="input-group">
                        {{ form_widget(form.siret) }}
                    </div>
                    {{ form_errors(form.siret) }}
                </div>
            </div>
            <h4><i class="glyphicon glyphicon-map-marker"></i> Adresse</h4>
            <div class="row-fluid">
                <div class="span4">
                    <label for="nom">Adresse</label>
                    <div class="input-group">
                        {{ form_widget(form.adresse) }}
                    </div>
                    {{ form_errors(form.adresse) }}
                </div>
                <div class="span4">
                    <label for="nom">Ville</label>
                    <div class="input-group">
                        {{ form_widget(form.ville) }}
                    </div>
                    {{ form_errors(form.ville) }}
                </div>
                <div class="span4">
                    <label for="nom">Code postal</label>
                    <div class="input-group">
                        {{ form_widget(form.zipcode) }}
                    </div>
                    {{ form_errors(form.zipcode) }}
                </div>
            </div>
            <h4><i class="glyphicon glyphicon-user"></i> Administration</h4>
                <div class="row-fluid">

                <div class="span4">
                    <label for="nom">Nom</label>
                    <div class="input-group">
                        {{ form_widget(form.nom) }}
                    </div>
                    {{ form_errors(form.nom) }}
                </div>

                <div class="span4">
                    <label for="prenom">Prénom</label>

                    <div class="input-group">
                        {{ form_widget(form.prenom) }}
                    </div>
                    {{ form_errors(form.prenom) }}
                </div>

                <div class="span4">
                    <label for="email">Email</label>

                    <div class="input-group">
                        {{ form_widget(form.email) }}
                    </div>
                    {{ form_errors(form.email) }}
                </div>
            </div>

            <div class="row-fluid">
                <div class="span4">
                    <label for="url">Téléphone</label>

                    <div class="input-group">
                        {{ form_widget(form.tel) }}
                    </div>
                    {{ form_errors(form.tel) }}
                </div>

                <div class="span4">
                    <label for="url">Url</label>

                    <div class="input-group">
                        {{ form_widget(form.url) }}
                    </div>
                    {{ form_errors(form.url) }}
                </div>

                <div class="span4">
                    <label for="reference">Entreprise</label>

                    <div class="input-group">
                        {{ form_widget(form.entreprise) }}
                    </div>
                    {{ form_errors(form.entreprise) }}
                </div>
            </div>
            <hr class="clear" />

            <h2><i class="glyphicon glyphicon-pencil"></i> Description</h2>

            <div class="row-fluid">
                <label for="url">Description de la boutique</label>
                {{ form_widget(form.description) }}
                {{ form_errors(form.description) }}
            </div>
            <hr class="clear" />

            <h2><i class="glyphicon glyphicon-wrench"></i> Personnalisation</h2>

            <div class="row-fluid">
                {{ form_errors(form.background) }}
                <div class="span3">
                    <label for="background">Background-Color</label>
                    <div class="input-group">
                        {{ form_widget(form.background) }}
                        <span class="input-group-btn">
                              <button class="btn btn-search btn-primary"><i class="glyphicon glyphicon-tint"></i></button>
                          </span>
                    </div>
                </div>

                <div class="span3">
                    <label for="color">Couleur</label>
                    {{ form_errors(form.color) }}
                    <div class="input-group">
                        {{ form_widget(form.color) }}
                        <span class="input-group-btn">
                              <button class="btn btn-search btn-primary"><i class="glyphicon glyphicon-tint"></i></button>
                          </span>
                    </div>
                </div>

                <div class="span3">
                    <label for="panel">Couleur des panels</label>
                    {{ form_errors(form.panel) }}
                    <div class="input-group">
                        {{ form_widget(form.panel) }}
                        <span class="input-group-btn">
                              <button class="btn btn-search btn-primary"><i class="glyphicon glyphicon-tint"></i></button>
                          </span>
                    </div>
                </div>

                <div class="span3">
                    <label for="panel">Couleur des titres</label>
                    {{ form_errors(form.title) }}
                    <div class="input-group">
                        {{ form_widget(form.title) }}
                        <span class="input-group-btn">
                              <button class="btn btn-search btn-primary"><i class="glyphicon glyphicon-tint"></i></button>
                          </span>
                    </div>
                </div>

            </div>
            <hr class="clear" />

            <h2><i class="glyphicon glyphicon-shopping-cart"></i> Catalogue</h2>

            <div class="row-fluid">
                <div class="span4">
                    <div class="input-group">
                        {{ form_widget(form.etat) }}
                        <label for="etat">Catalogue activé ?</label>
                    </div>

                    {{ form_errors(form.etat) }}
                </div>

                <div class="span4">
                    <label for="nombreParPage">Nombre de résultat par page</label>

                    <div class="input-group">
                        {{ form_widget(form.nombreParPage) }}
                    </div>
                    {{ form_errors(form.nombreParPage) }}
                </div>

                <div class="span4">
                    <label for="orderBy">Trié par</label>
                        {{ form_widget(form.orderBy) }}
                        {{ form_errors(form.orderBy) }}
                </div>
            </div>
            <div class="row-fluid">
                <div class="span6">
                    {{ form_widget(form.emballage) }}
                    <label for="emballage">Proposez l'emballage cadeau à vos client</label>
                </div>

                <div class="span6">
                    <label for="jourNouveau">Nombre de jour pour de nouveauté d'un produit</label>
                    {{ form_widget(form.jourNouveau) }}
                </div>
            </div>
            <div class="row-fluid">
                <div class="span6">
                    {{ form_widget(form.horsStock) }}
                    {{ form_errors(form.horsStock) }}
                    <label for="horsStock">Authoriser les commandes hors-stock</label>
                </div>

                <div class="span6">
                    {{ form_widget(form.quantity) }}
                    {{ form_errors(form.quantity) }}
                    <label for="quantity">Afficher la quantité des produits</label>
                </div>
            </div>
    </div>

    <button class="btn btn-primary btn-block" type="submit">
        <i class="glyphicon glyphicon-wrench"></i>
        Modifier la configuration
    </button>
    </form>
    </div>
{% endblock %}


