{% extends 'HorusSiteBundle::layout.html.twig' %}

{% block content %}
<div class="page" id="administrateurs">
    <h2><i class="glyphicon glyphicon-bell"></i> Historique des notifications</h2>

        <ul class="nav nav-pills nav-stacked">
            {% for notif in notifs %}
                <li>
                    <h4 class="pull-left">{{ notif.titre|raw }}</h4>
                    <span class="pull-right"><small><i class="glyphicon glyphicon-time"></i> {{ notif.dateCreated|date('d/m/Y H:i:') }}</small></span>
                    <div class="clear"></div>
                    <p>{{ notif.content|raw }}</p>
                </li>
            {% else %}
                <div class="alert">
                    <p>Aucune notification pour le moment</p>
                </div>
            {% endfor %}
        </ul>
    </div>
</div>
{% endblock %}
