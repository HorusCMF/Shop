{% extends 'HorusSiteBundle::layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets '@HorusSiteBundle/Resources/public/css/pages/administrateur.sass' filter='yui_css' %}
    <link rel="stylesheet" type="text/css" media="screen" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock %}


{% block javascripts %}
    {{ parent() }}
    {% javascripts '@HorusSiteBundle/Resources/public/js/pages/administrateur.js' %}
    <script src="{{ asset_url }}" type="text/javascript"></script>
    {% endjavascripts %}
{% endblock %}

{% block content %}
    <div class="page" id="createadministrateur">
        <a class="btn back btn-danger pull-right" href="{{ path('horus_site_administrateurs') }}">&larr; Revenir à la liste des administrateurs</a>

        <h1><i class="glyphicon glyphicon-plus"></i> Créer un administrateur</h1>
        <hr class="clear fancy-line">

        <form   novalidate="novalidate" action="{{ path('horus_site_add_administrateur') }}" method="post" enctype="multipart/form-data">

            <h3>Rôle sur la plateforme</h3>
            <div class="row-fluid">
                <div class="span8">
                    {{ form_row(form.groups) }}
                </div>
            </div>
            <h3>Informations</h3>
            <div class="row-fluid">
                <div class="span3">
                    {{ form_row(form.gender) }}
                </div>
                <div class="span4">
                    {{ form_row(form.firstname) }}
                </div>
                <div class="span4">
                    {{ form_row(form.lastname) }}
                </div>
            </div>

            <div class="row-fluid">
                <div class="span12">
                    {{ form_row(form.description) }}
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <label for="file"><i class="glyphicon glyphicon-picture"></i> Petite photo</label>
                    {{ form_widget(form.file) }}
                    {{ form_errors(form.file) }}
                </div>
            </div>

            <div class="row-fluid">
                <div class="span4">
                    {{ form_row(form.ville) }}
                </div>
                <div class="span4">
                    {{ form_row(form.adresse) }}
                </div>
                <div class="span2">
                    {{ form_row(form.zipcode) }}
                </div>
            </div>

            <div class="row-fluid well">
                <div class="span4">
                    {{ form_row(form.email) }}
                </div>
                <div class="span4">
                    {{ form_row(form.password.mdp,{'value' : '', 'attr': {'autocomplete' : 'off'}}) }}
                </div>
                <div class="span4">
                    {{ form_row(form.password.mdp_conf) }}
                </div>
            </div>

            <div class="row-fluid">
                <div class="span4">
                    {{ form_row(form.tel) }}
                </div>
                <div class="span4">
                    {{ form_row(form.entreprise) }}
                </div>
            </div>
            {{ form_rest(form) }}

            <button class="btn btn-primary btn-large" type="submit"><i class="glyphicon glyphicon-plus"></i> Créer
                cet administrateur
            </button>
        </form>
    </div>
{% endblock %}

