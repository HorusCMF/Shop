{% extends 'HorusSiteBundle::layout.html.twig' %}

{% block content %}
    <div class="page" id="categories">
        <h2><i class="glyphicon glyphicon-user"></i> Mon compte</h2>
        <a class="btn back btn-danger pull-right" href="{{ path('horus_site_administrateurs') }}">&larr; Revenir à la
            liste des administrateurs</a>

        <form novalidate="novalidate" action="{{ path('horus_site_myaccount') }}" method="post">

            <div class="row-fluid">
                <div class="span3">
                    {{ form_row(form.gender) }}
                </div>
                <div class="span4">
                    {{ form_row(form.firstname) }}
                </div>
                <div class="span4">
                    {{ form_row(form.lastname) }}
                </div>
            </div>

            <div class="row-fluid">
                <div class="span2">
                    {{ form_row(form.dob['day']) }}
                </div>
                <div class="span2">
                    {{ form_row(form.dob['month']) }}
                </div>
                <div class="span2">
                    {{ form_row(form.dob['year']) }}
                </div>
            </div>

            <div class="row-fluid">
                <div class="span12">
                    {{ form_row(form.description) }}
                </div>
            </div>
            <div class="row-fluid">
                <div class="span4">
                    {{ form_row(form.ville) }}
                </div>
                <div class="span4">
                    {{ form_row(form.adresse) }}
                </div>
                <div class="span2">
                    {{ form_row(form.zipcode) }}
                </div>
            </div>

            <div class="row-fluid">
                <div class="span4">
                    {{ form_row(form.email) }}
                </div>
                <div class="span4">
                    {{ form_row(form.password.mdp) }}
                </div>
                <div class="span4">
                    {{ form_row(form.password.mdp_conf) }}
                    <div class="label label-warning">Indiquer si changement</div>
                </div>
            </div>

            <div class="row-fluid">
                <div class="span4">
                    {{ form_row(form.tel) }}
                </div>
                <div class="span4">
                    {{ form_row(form.entreprise) }}
                </div>
                <div class="span4">
                    {{ form_row(form.groups) }}
                </div>
            </div>
            {{ form_row(form) }}

            <button class="btn btn-primary btn-large" type="submit"><i class="glyphicon glyphicon-plus"></i> Créer
                cet administrateur
            </button>
        </form>
        <div class="clear"></div>
    </div>
{% endblock %}

