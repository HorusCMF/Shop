{% extends 'HorusSiteBundle::layout.html.twig' %}

{% block content %}
    <div class="page" id="categories">
        <a  href="{{ path('horus_site_administrateur_history', {'id' : app.user.id}) }}" class="pull-right btn btn-danger btn-sm"><i class="glyphicon glyphicon-calendar"></i> Mon Historique</a></li>

        <h2><i class="glyphicon glyphicon-user"></i> Mon compte</h2>

        <form novalidate="novalidate" action="{{ path('horus_site_myaccount') }}" method="post">
            <h3>RÃ´le sur la plateforme</h3>
            <div class="row-fluid">
                <div class="span8">
                    {{ form_row(form.groups) }}
                </div>
            </div>
            <h3>Informations</h3>

            <div class="row-fluid">
                <div class="span3">
                    {{ form_row(form.gender) }}
                </div>
                <div class="span4">
                    {{ form_row(form.firstname) }}
                </div>
                <div class="span4">
                    {{ form_row(form.lastname) }}
                </div>
            </div>

            <div class="row-fluid">
                <div class="span12">
                    {{ form_row(form.description) }}
                </div>
            </div>
            <div class="row-fluid">
                <div class="span4">
                    {{ form_row(form.ville) }}
                </div>
                <div class="span4">
                    {{ form_row(form.adresse) }}
                </div>
                <div class="span2">
                    {{ form_row(form.zipcode) }}
                </div>
            </div>

            <div class="row-fluid">
                <div class="span4">
                    {{ form_row(form.email) }}
                </div>
                <div class="span4">
                    {{ form_row(form.password.mdp) }}
                </div>
                <div class="span4">
                    {{ form_row(form.password.mdp_conf) }}
                    <div class="label label-warning">Indiquer si changement</div>
                </div>
            </div>

            <div class="row-fluid">
                <div class="span4">
                    {{ form_row(form.tel) }}
                </div>
                <div class="span4">
                    {{ form_row(form.entreprise) }}
                </div>

            </div>

            {{ form_row(form) }}

            <button class="btn btn-primary btn-large" type="submit"><i class="glyphicon glyphicon-pencil"></i> Editer mon compte</button>
        </form>
        <div class="clear"></div>
    </div>
{% endblock %}

