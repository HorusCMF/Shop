{% extends 'HorusSiteBundle::layout.html.twig' %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}


{% block content %}
    <div id="editfamille">
        <a class="btn back btn-danger pull-right" href="{{ path('horus_site_familles') }}">&larr; Revenir à la liste des
            familles</a>

        <h1><i class="glyphicon glyphicon-pencil"></i> Editer une famille</h1>
        <div class="label label-danger pull-right">Modifié il y a {{ famille.dateCreated|created_ago }}</div>

        <hr class="clear fancy-line">

        <form novalidate="novalidate" action="{{ path('horus_site_edit_famille', {'id' : famille.id}) }}" method="post" enctype="multipart/form-data">

            <div class="row-fluid">
                <div class="span12">
                    <label for="title">Titre</label>

                    <div class="input-group">
                        {{ form_widget(form.name) }}
                        <span class="input-group-btn">
                                          <button class="btn btn-search btn-primary"><i
                                                      class="glyphicon glyphicon-pencil"></i></button>
                                      </span>

                    </div>
                    {{ form_errors(form.name) }}
                </div>
            </div>

            <div class="row-fluid">
                <div class="span12">
                    <label for="title">Résumé</label>
                    {{ form_widget(form.cover) }}
                    {{ form_errors(form.cover) }}
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <label for="file">Image</label>
                    {{ form_widget(form.file) }}
                    {{ form_errors(form.file) }}
                    {% if famille.path is not empty %}
                        <img class="img-polaroid"  src="{{ imgfamilles  ~ famille.path|sizes('small') }}"/>
                    {% else %}
                        <img class="media-object img-thumbnail" src="http://placehold.it/150x75" alt="...">
                    {% endif %}
                    <div class="clear"></div>
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <label for="title">Description</label>
                    {{ form_widget(form.description) }}
                    {{ form_errors(form.description) }}
                </div>
            </div>
            <div class="row-fluid">
                <div class="span3">
                    <label for="position">Positionnement</label>
                    {{ form_widget(form.position) }}
                    {{ form_errors(form.position) }}
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <label for="title">Produits associés</label>
                    {{ form_widget(form.produits) }}
                    {{ form_errors(form.produits) }}
                </div>
            </div>
            {{ form_rest(form) }}

            <button class="btn btn-primary btn-large" type="submit"><i class="glyphicon glyphicon-pencil"></i> Editer
                cette famille
            </button>
        </form>
    </div>
{% endblock %}

