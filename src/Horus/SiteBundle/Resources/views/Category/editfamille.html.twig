{% extends 'HorusSiteBundle::layout.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts '@HorusSiteBundle/Resources/public/js/pages/famille.js' %}
    <script src="{{ asset_url }}" type="text/javascript"></script>
    {% endjavascripts %}
{% endblock %}


{% block stylesheets %}
    {{ parent() }}
    {% stylesheets '@HorusSiteBundle/Resources/public/css/pages/famille.sass' filter='yui_css' %}
    <link rel="stylesheet" type="text/css" media="screen" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock %}

{% block content %}
    <div id="editfamille" class="page">
        {#<a class="btn back btn-danger pull-right" href="{{ path('horus_site_familles') }}">&larr; Revenir à la liste des#}
            {#familles</a>#}

        <div class="row-fluid">
            {% if famille.path is not empty %}
                <div class="span2 pull-right">
                    <a rel="group" class="pull-left fancybox" href="{{ imgfamilles  ~ famille.path|sizes('big') }}">
                        <img class="img-polaroid" src="{{ imgfamilles  ~ famille.path|sizes('small') }}"/>
                    </a>
                    <div class="label label-danger pull-right"><i class="glyphicon glyphicon-time"></i> Modifié il y
                        a {{ famille.dateCreated|created_ago }}</div>
                </div>
            {% endif %}
            <div class="{% if famille.path is not empty %}span9{% else %}span12{% endif %}">
                <h1><i class="glyphicon glyphicon-pencil"></i> Editer la famille "{{ famille.name|title }}"</h1>
            </div>
        </div>
        <form novalidate="novalidate" action="{{ path('horus_site_edit_famille', {'id' : famille.id}) }}" method="post"
              enctype="multipart/form-data">


            <div class="row-fluid">
                <div class="span6">
                    <label for="name">Nom de la famille</label>

                    <div class="input-group">
                        {{ form_widget(form.name) }}
                        <span class="input-group-btn">
                                          <button class="btn btn-search btn-primary"><i
                                                      class="glyphicon glyphicon-pencil"></i></button>
                                      </span>

                    </div>
                    {{ form_errors(form.name) }}
                </div>
                <div class="span6">
                    <label for="keywords">Mot-clefs</label>
                        {{ form_widget(form.keywords) }}
                    {{ form_errors(form.keywords) }}
                </div>
            </div>

            <div class="row-fluid">
                <div class="span12">
                    <label for="parent">Famille parente</label>
                    {{ form_widget(form.parent) }}
                    {{ form_errors(form.parent) }}
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <label for="cover">Petit résumé</label>
                    {{ form_widget(form.cover) }}
                    {{ form_errors(form.cover) }}
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <label for="file"><i class="glyphicon glyphicon-picture"></i> Image de la famille</label>
                    {{ form_widget(form.file) }}
                    {{ form_errors(form.file) }}
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <label for="description">Description complète</label>
                    {{ form_widget(form.description) }}
                    {{ form_errors(form.description) }}
                </div>
            </div>
            <div class="row-fluid">
                <div class="span3">
                    <label for="position">Positionnement</label>
                    {{ form_widget(form.position) }}
                    {{ form_errors(form.position) }}
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <label for="produits"><i class="glyphicon glyphicon-share-alt"></i> Produits associés</label>
                    {{ form_widget(form.produits) }}
                    {{ form_errors(form.produits) }}
                </div>
            </div>
            {{ form_rest(form) }}

            <button class="btn btn-primary btn-large" type="submit"><i class="glyphicon glyphicon-pencil"></i> Editer
                cette famille
            </button>
        </form>
    </div>
{% endblock %}

