{% extends 'HorusSiteBundle::layout.html.twig' %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}


{% block content %}
    <div id="editcategory">
        <a class="btn back btn-danger pull-right" href="{{ path('horus_site_categories') }}">&larr; Revenir à la liste
            des
            catégories</a>

        <h1><i class="glyphicon glyphicon-pencil"></i> Editer "{{ category.name|title }}"</h1>
        <div class="label label-danger pull-right">Modifié il y a {{ category.dateUpdated|created_ago }}</div>

        <hr class="clear fancy-line">

        <form novalidate="novalidate" action="{{ path('horus_site_edit_category', {'id' : category.id}) }}"
              method="post">

            <div class="row-fluid">
                <div class="span12">
                    <label for="title">Titre</label>

                    <div class="input-group">
                        {{ form_widget(form.name) }}
                        <span class="input-group-btn">
                                          <button class="btn btn-search btn-primary"><i
                                                      class="glyphicon glyphicon-pencil"></i></button>
                                      </span>

                    </div>
                    {{ form_errors(form.name) }}
                </div>
            </div>

            <div class="row-fluid">
                <div class="span12">
                    <label for="title">Résumé</label>
                    {{ form_widget(form.cover) }}
                    {{ form_errors(form.cover) }}
                </div>
            </div>

            <div class="row-fluid">
                <div class="span12">
                    <label for="title">Description</label>
                    {{ form_widget(form.description) }}
                    {{ form_errors(form.description) }}
                </div>
            </div>

            <div class="row-fluid">
                <div class="span12">
                    <label for="title">Articles</label>
                    {{ form_widget(form.articles) }}
                    {{ form_errors(form.articles) }}
                </div>
            </div>
            {{ form_rest(form) }}

            <button class="btn btn-primary btn-large" type="submit"><i class="glyphicon glyphicon-pencil"></i> Editer
                cette catégorie
            </button>
        </form>
    </div>
{% endblock %}

