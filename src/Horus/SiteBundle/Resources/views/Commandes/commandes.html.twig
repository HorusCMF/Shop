{% extends 'HorusSiteBundle::layout.html.twig' %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block content %}
    <div class="page" id="commandes">
        <h1><i class="glyphicon glyphicon-retweet"></i> Commandes</h1>
        {% include 'HorusSiteBundle:Slots:display.html.twig' %}

        <div class="">
            <table class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Référence</th>
                        <th>Client</th>
                        <th>Prix TTC</th>
                        <th>Transporteur</th>
                        <th>Etat</th>
                        <th>Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for commande in commandes %}
                    <tr class="{{ commande.etat|commandesclasses }}">
                        <td><a href="{{ path('horus_site_commande', {'id' : commande.id}) }}">{{ loop.index }}</a></td>
                        <td>
                            <a href="{{ path('horus_site_commande', {'id' : commande.id}) }}">{{ commande.reference }}</a>
                        </td>
                        <td><a href="">{{ commande.client.firstname|title }} {{ commande.client.lastname|title }}</a></td>
                        <td>{{ commande.totalTTC }}€</td>
                        <td>{{ commande.transport.title }}</td>
                        <td>{{ commande.etat|commandes }}</td>
                        <td>{{ commande.dateCreated|created_ago }}</td>
                        <td>
                            <a href="{{ path('horus_site_generatefacture', {'id' : commande.id}) }}"><i class="glyphicon glyphicon-cloud-download"></i></a>
                            <a href="{{ path('horus_site_edit_commande', {'id' : commande.id}) }}"><i class="glyphicon glyphicon-pencil"></i></a>
                            <a href="{{ path('horus_site_commande', {'id' : commande.id}) }}"><i class="glyphicon glyphicon-search"></i></a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}

