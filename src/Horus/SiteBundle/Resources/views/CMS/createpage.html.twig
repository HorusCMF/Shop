{% extends 'HorusSiteBundle::layout.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts '@HorusSiteBundle/Resources/public/js/product.js' %}
    <script src="{{ asset_url }}" type="text/javascript"></script>
    {% endjavascripts %}
{% endblock %}


{% block content %}

    <div id="createpage">
        <a class="btn back btn-danger pull-right" href="{{ path('hetic_site_pages') }}">&larr; Revenir à la liste des
            page</a>

        <h1><i class="glyphicon glyphicon-plus"></i> Créer une page</h1>
        <hr class="clear fancy-line">



        <form novalidate="novalidate" action="{{ path('hetic_site_page_create') }}" method="post">

            <div class="row-fluid">
                <div class="span12">
                    <label for="title">Titre</label>
                    <div class="input-group">
                        {{ form_widget(form.name) }}
                        <span class="input-group-btn">
                                          <button class="btn btn-search btn-primary"><i
                                                      class="glyphicon glyphicon-pencil"></i></button>
                                      </span>

                    </div>
                    {{ form_errors(form.name) }}
                </div>
            </div>

            <div class="row-fluid">
                <div class="span12">
                    <label for="title">Résumé</label>
                    {{ form_widget(form.cover) }}
                    {{ form_errors(form.cover) }}
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <label for="title">Description</label>
                        {{ form_widget(form.description) }}
                    {{ form_errors(form.description) }}
                </div>
            </div>

            <div class="row-fluid">
                <div class="span12">
                    <label for="title">Produits</label>
                        {{ form_widget(form.produits) }}
                    {{ form_errors(form.produits) }}
                </div>
            </div>
            {{ form_rest(form) }}

            <button class="btn btn-primary btn-large" type="submit"><i class="glyphicon glyphicon-plus"></i> Ajouter
                cette page
            </button>
        </form>
    </div>
{% endblock %}

