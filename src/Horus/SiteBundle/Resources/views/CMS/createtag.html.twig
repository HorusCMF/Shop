{% extends 'HorusSiteBundle::layout.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts '@HorusSiteBundle/Resources/public/js/pages/tag.js' %}
    <script src="{{ asset_url }}" type="text/javascript"></script>
    {% endjavascripts %}
{% endblock %}


{% block content %}

    <div id="createtag" class="page">
        <a class="btn back btn-danger pull-right" href="{{ path('horus_site_tags') }}">&larr; Revenir à la liste des tags</a>

        <h1><i class="glyphicon glyphicon-tag"></i> Créer un tag</h1>
        <hr class="clear fancy-line">

        <div class="alert alert-warning">
            <i class="glyphicon glyphicon-info-sign"></i>Pour créer plusieurs mots-clefs à la fois, vous devez séparer vos motfs-clefs par des points-vigules ";"
        </div>
        <form  novalidate="novalidate" action="{{ path('horus_site_tag_create') }}" method="post">

            <div class="row-fluid">
                <div class="span12">
                    <label for="title">Mots-Clefs</label>
                    <div class="input-group">
                        {{ form_widget(form.word) }}
                        <span class="input-group-btn">
                                          <button class="btn btn-search btn-primary"><i
                                                      class="glyphicon glyphicon-pencil"></i></button>
                                      </span>

                    </div>
                    {{ form_errors(form.word) }}
                </div>
            </div>

            <button class="btn btn-primary btn-large" type="submit"><i class="glyphicon glyphicon-plus"></i> Créer
                ce tag
            </button>
        </form>
    </div>
{% endblock %}

