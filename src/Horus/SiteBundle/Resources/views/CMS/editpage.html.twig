{% extends 'HorusSiteBundle::layout.html.twig' %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}


{% block content %}
    <div id="editpage">
        <a class="btn back btn-danger pull-right" href="{{ path('horus_site_pages') }}">&larr; Revenir à la liste des
            page</a>

        <h1><i class="glyphicon glyphicon-pencil"></i> Editer "{{ page.name }}"</h1>
        <div class="label label-danger pull-right"><i class="glyphicon glyphicon-time"></i> Modifié il y a {{ page.dateCreated|created_ago }}</div>

        <hr class="clear fancy-line">

        <form novalidate="novalidate" action="{{ path('horus_site_edit_page',{'id' : page.id}) }}" method="post">

            <div class="row-fluid">
                <div class="span12">
                    <label for="title">Titre</label>

                    <div class="input-group">
                        {{ form_widget(form.name) }}
                        <span class="input-group-btn">
                                          <button class="btn btn-search btn-primary"><i
                                                      class="glyphicon glyphicon-pencil"></i></button>
                                      </span>

                    </div>
                    {{ form_errors(form.name) }}
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    {{ form_widget(form.nature) }}
                    {{ form_errors(form.nature) }}
                </div>
            </div>

            <div class="row-fluid">
                <div class="span12">
                    <label for="title">Chapeau</label>
                    {{ form_widget(form.chapeau) }}
                    {{ form_errors(form.chapeau) }}
                </div>
            </div>
            {% if video.html is defined and video.html is not empty %}
                <h3>La vidéo de votre produit</h3>
                <div class="row-fluid well">
                    <div class="span12">
                        {{ video.html|raw }}
                    </div>
                </div>
            {% endif %}

            <div class="row-fluid">
                <div class="span12">
                    <label for="title">Vidéo de présentation</label>
                    {{ form_widget(form.video) }}
                    {{ form_errors(form.video) }}
                </div>
            </div>

            <div class="row-fluid">
                <div class="span12">
                    <label for="title">Résumé</label>
                    {{ form_widget(form.cover) }}
                    {{ form_errors(form.cover) }}
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <label for="title">Description</label>
                    {{ form_widget(form.description) }}
                    {{ form_errors(form.description) }}
                </div>
            </div>

            <div class="row-fluid">
                <div class="span12">
                    <label for="title">Articles asocciés à la page</label>
                    {{ form_widget(form.articles) }}
                    {{ form_errors(form.articles) }}
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <label for="title">Produits asocciés à la page</label>
                    {{ form_widget(form.produits) }}
                    {{ form_errors(form.produits) }}
                </div>
            </div>
            {{ form_rest(form) }}

            <button class="btn btn-primary btn-large" type="submit"><i class="glyphicon glyphicon-pencil"></i> Editer
                cette page
            </button>
        </form>
    </div>
{% endblock %}

