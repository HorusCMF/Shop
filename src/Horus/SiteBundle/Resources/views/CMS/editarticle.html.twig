{% extends 'HorusSiteBundle::layout.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts '@HorusSiteBundle/Resources/public/js/pages/article.js' %}
    <script src="{{ asset_url }}" type="text/javascript"></script>
    {% endjavascripts %}
{% endblock %}


{% block stylesheets %}
    {{ parent() }}
    {% stylesheets '@HorusSiteBundle/Resources/public/css/pages/article.sass' filter='yui_css' %}
    <link rel="stylesheet" type="text/css" media="screen" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock %}

{% block content %}
    <div id="editarticle" class="page">
        <a class="btn back btn-danger pull-right" href="{{ path('horus_site_articles') }}">&larr; Revenir à la liste des
            article</a>

        <h1><i class="glyphicon glyphicon-pencil"></i> Editer "{{ article.title }}"</h1>
        <div class="label label-danger pull-right"><i class="glyphicon glyphicon-time"></i> Modifié il y a {{ article.dateCreated|created_ago }}</div>

        <hr class="clear fancy-line">

        <form  novalidate="novalidate" action="{{ path('horus_site_edit_article',{'id' : article.id}) }}" method="post">



            <div class="row-fluid">
                <div class="span12">
                    <label for="title">Titre de l'article</label>
                    <div class="input-group">
                        {{ form_widget(form.title) }}
                        <span class="input-group-btn">
                                          <button class="btn btn-search btn-primary"><i
                                                      class="glyphicon glyphicon-pencil"></i></button>
                                      </span>

                    </div>
                    {{ form_errors(form.title) }}
                </div>
            </div>
            <div class="row-fluid">
                <div class="span6">
                    <label for="datePublication">Date de publication</label>
                    {{ form_widget(form.datePublication) }}
                    {{ form_errors(form.datePublication) }}
                </div>
                <div class="span6">
                    <label for="nature">Etat</label>
                    {{ form_widget(form.nature) }}
                    {{ form_errors(form.nature) }}
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <label for="cover">Petit résumé</label>
                    {{ form_widget(form.cover) }}
                    {{ form_errors(form.cover) }}
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <label for="content">Description complète</label>
                    {{ form_widget(form.content) }}
                    {{ form_errors(form.content) }}
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    {{ form_widget(form.isVisible) }}
                    {{ form_errors(form.isVisible) }}
                    <label for="isVisible">Visible sur le site</label>
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    {{ form_widget(form.home) }}
                    {{ form_errors(form.home) }}
                    <label for="isVisible">Visible sur la page d'accueil</label>
                </div>
            </div>
            <div class="well">
                <h3>Associativité</h3>
                <div class="row-fluid">
                    <div class="span12">
                        <label for="tags"><i class="glyphicon glyphicon-tags"></i> Mots-clefs associés</label>
                        {{ form_widget(form.tags) }}
                        {{ form_errors(form.tags) }}
                    </div>
                </div>
                <div class="row-fluid">
                    <div class="span12">
                        <label for="tags"><i class="glyphicon glyphicon-flash"></i> Produits associés</label>
                        {{ form_widget(form.produits) }}
                        {{ form_errors(form.produits) }}
                    </div>
                </div>
                <div class="row-fluid">
                    <div class="span12">
                        <label for="tags"><i class="glyphicon glyphicon-list-alt"></i> Pages associées</label>
                        {{ form_widget(form.pages) }}
                        {{ form_errors(form.pages) }}
                    </div>
                </div>
                <div class="row-fluid">
                    <div class="span12">
                        <label for="tags"><i class="gglyphicon glyphicon-th-large"></i> Catégories associées</label>
                        {{ form_widget(form.categories) }}
                        {{ form_errors(form.categories) }}
                    </div>
                </div>
            </div>

            <button class="btn btn-primary btn-large" type="submit"><i class="glyphicon glyphicon-pencil"></i> Editer
                cet article
            </button>
        </form>
    </div>
{% endblock %}

