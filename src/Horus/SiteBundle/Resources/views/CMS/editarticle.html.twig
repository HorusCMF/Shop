{% extends 'HorusSiteBundle::layout.html.twig' %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}


{% block content %}
    <div id="editarticle">
        <a class="btn back btn-danger pull-right" href="{{ path('horus_site_articles') }}">&larr; Revenir à la liste des
            article</a>

        <h1><i class="glyphicon glyphicon-pencil"></i> Editer "{{ article.title }}"</h1>
        <div class="label label-danger pull-right">Modifié il y a {{ article.dateCreated|created_ago }}</div>

        <hr class="clear fancy-line">

        <form novalidate="novalidate" action="{{ path('horus_site_edit_article',{'id' : article.id}) }}" method="post">

            <div class="row-fluid">
                <div class="span12">
                    <label for="title">Titre</label>

                    <div class="input-group">
                        {{ form_widget(form.title) }}
                        <span class="input-group-btn">
                                          <button class="btn btn-search btn-primary"><i
                                                      class="glyphicon glyphicon-pencil"></i></button>
                                      </span>

                    </div>
                    {{ form_errors(form.title) }}
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <label for="datePublication">Date de publication</label>
                    {{ form_widget(form.datePublication) }}
                    {{ form_errors(form.datePublication) }}
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <label for="tags">Pages</label>
                    {{ form_widget(form.pages) }}
                    {{ form_errors(form.pages) }}
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <label for="nature">Nature</label>
                    {{ form_widget(form.nature) }}
                    {{ form_errors(form.nature) }}
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <label for="cover">Résumé</label>
                    {{ form_widget(form.cover) }}
                    {{ form_errors(form.cover) }}
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <label for="content">Description</label>
                    {{ form_widget(form.content) }}
                    {{ form_errors(form.content) }}
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <label for="tags">Tags</label>
                    {{ form_widget(form.tags) }}
                    {{ form_errors(form.tags) }}
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    {{ form_widget(form.isVisible) }}
                    {{ form_errors(form.isVisible) }}
                    <label for="isVisible">Visible sur le site</label>
                </div>
            </div>
            <button class="btn btn-primary btn-large" type="submit"><i class="glyphicon glyphicon-pencil"></i> Editer
                cet article
            </button>
        </form>
    </div>
{% endblock %}

