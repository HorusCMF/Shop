{% extends 'HorusSiteBundle::layout.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts '@HorusSiteBundle/Resources/public/js/pages/commentaire.js' %}
    <script src="{{ asset_url }}" type="text/javascript"></script>
    {% endjavascripts %}
{% endblock %}


{% block stylesheets %}
    {{ parent() }}
    {% stylesheets '@HorusSiteBundle/Resources/public/css/pages/commentaire.sass' filter='yui_css' %}
    <link rel="stylesheet" type="text/css" media="screen" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock %}

{% block content %}
    <div id="createcommentaire" class="page">
        <a class="btn back btn-danger pull-right" href="{{ path('horus_site_commentaires') }}">&larr; Revenir Ã  la liste
            des commentaires</a>

        <h1><i class="glyphicon glyphicon-pencil"></i> Editer un commentaire</h1>
        <hr class="clear fancy-line">

        <form  novalidate="novalidate" action="{{ path('horus_site_edit_commentaire', {'id' : commentaire.id}) }}" method="post">
            <div class="row-fluid">
                <div class="span12">
                    <label for="title">Content</label>
                    {{ form_widget(form.content) }}
                    {{ form_errors(form.content) }}
                </div>
            </div>

            <div class="row-fluid">
                <div class="span12">
                    <label for="etat">Etat</label>
                    <div class="clear"></div>
                    <label for="title">{{ form_widget(form.visible) }}
                    {{ form_errors(form.visible) }}
                </div>
            </div>
            <button class="btn btn-primary btn-large" type="submit"><i class="glyphicon glyphicon-pencil"></i> Editer
                ce commentaire
            </button>
        </form>
    </div>
{% endblock %}

