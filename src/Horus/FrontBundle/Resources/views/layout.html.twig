{% extends '::base.html.twig' %}

{% block title %}Horus Shop CMF Front{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    <link rel="stylesheet" type="text/css" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"/>
    <link rel="stylesheet" type="text/css" href="http://getbootstrap.com/2.3.2/assets/css/bootstrap-responsive.css"/>
    <link rel="stylesheet" type="text/css" href="//code.jquery.com/ui/1.10.3/themes/hot-sneaks/jquery-ui.css"/>
    <link rel="stylesheet" type="text/css"
          href="http://davidstutz.github.io/bootstrap-multiselect/css/bootstrap-multiselect.css"/>

    {% stylesheets '@HorusFrontBundle/Resources/public/css/bootswatch.css' filter='yui_css' %}
    <link rel="stylesheet" type="text/css" media="screen" href="{{ asset_url }}"/>
    {% endstylesheets %}

    {% stylesheets '@HorusFrontBundle/Resources/public/css/main.sass' filter='yui_css' %}
    <link rel="stylesheet" type="text/css" media="screen" href="{{ asset_url }}"/>
    {% endstylesheets %}

    <script src="http://code.jquery.com/jquery-1.10.2.min.js"></script>
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.2/js/bootstrap.min.js"></script>

    {% if app.user.id is defined %}
        <script type="text/javascript" src="http://{{ app.request.host }}:1665/socket.io/socket.io.js"></script>
        {% javascripts '@HorusSiteBundle/Resources/public/js/io.js' %}
        <script src="{{ asset_url }}" type="text/javascript"></script>
        {% endjavascripts %}
    {% endif %}

{% endblock %}


{% block body %}
    <a href="https://github.com/HorusCMF/Shop"><img
                style="z-index: 50000;position: absolute; top: 0; right: 0; border: 0;"
                src="https://s3.amazonaws.com/github/ribbons/forkme_right_darkblue_121621.png" alt="Fork me on GitHub"></a>
    {% include 'HorusFrontBundle:Slots:topmenu.html.twig' %}
    <div class="container-fluid">
        <div class="row-fluid">
            {% include 'HorusSiteBundle:Slots:notification.html.twig' %}
            <div class="span12">
                <div class="container">

                    <nav class="navbar navbar-default" role="navigation">
                        <!-- Brand and toggle get grouped for better mobile display -->
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle" data-toggle="collapse"
                                    data-target="#bs-example-navbar-collapse-1">
                                <span class="sr-only">Toggle navigation</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                            <a class="navbar-brand" href="#"><i class="glyphicon glyphicon-home"></i> Horus CMF</a>
                        </div>

                        <!-- Collect the nav links, forms, and other content for toggling -->
                        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                            <ul class="nav navbar-nav">
                                <li class="active"><a href="#"><i class="glyphicon glyphicon-gift"></i> Produits</a>
                                </li>
                                <li><a href="#"><i class="glyphicon glyphicon-th-list"></i> Catégories</a></li>
                                <li><a href="#"><i class="glyphicon glyphicon-th-large"></i> Familles</a></li>
                                <li><a href="#"><i class="glyphicon glyphicon-registration-mark"></i> Marques</a></li>
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i
                                                class="glyphicon glyphicon-bookmark"></i> Pages <b
                                                class="caret"></b></a>
                                    <ul class="dropdown-menu">
                                        <li><a href="#">Pages</a></li>
                                        <li><a href="#">Articles</a></li>
                                    </ul>
                                </li>
                            </ul>

                            <ul class="nav navbar-nav navbar-right">
                                <li class="dropdown">
                                    <a class="dropdown-toggle" data-toggle="dropdown">
                                        <i class="glyphicon glyphicon-shopping-cart"></i> Votre Panier  <b class="caret"></b>
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a href="#"><i class="glyphicon glyphicon-plus"></i> Produit 1 x 5 </a></li>
                                        <li><a href="#"><i class="glyphicon glyphicon-plus"></i> Produit 2 x 2</a></li>
                                        <li><a href="#"><i class="glyphicon glyphicon-plus"></i> Produit 3 x6</a></li>

                                        <p>Total HT: 100 €</p>
                                        <p>Total TTC: 118 €</p>

                                    </ul>

                                </li>
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i
                                                class="glyphicon glyphicon-user"></i> Mon Compte <b
                                                class="caret"></b></a>
                                    <ul class="dropdown-menu">
                                        <li><a href="#"><i class="glyphicon glyphicon-transfer"></i> Mes
                                                Commandes</a></li>
                                        <li><a href="#"><i class="glyphicon glyphicon-map-marker"></i> Mes
                                                Adresses</a></li>
                                        <li><a href="#"><i class="glyphicon glyphicon-info-sign"></i> Mes
                                                Informations Personnelles</a></li>
                                        <li><a href="#"><i class="glyphicon glyphicon-list"></i> Mon Historique</a>
                                        </li>
                                        <li class="divider"></li>
                                        <li><a href="#"><i class="glyphicon glyphicon-heart"></i> Mes Produits
                                                Favoris</a></li>
                                        <li><a href="#"><i class="glyphicon glyphicon-euro"></i> Mes Bons de
                                                Réductions</a></li>
                                        <li><a href="#"><i class="glyphicon glyphicon-exclamation-sign"></i> Mes
                                                Alertes</a></li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                        <!-- /.navbar-collapse -->
                    </nav>

                    <div class="row-fluid">
                        <nav class="navbar navbar-inverse span8 offset2" role="navigation">
                            <!-- Brand and toggle get grouped for better mobile display -->
                            <div class="navbar-header">
                                <button type="button" class="navbar-toggle" data-toggle="collapse"
                                        data-target="#bs-example-navbar-collapse-9">
                                    <span class="sr-only">Toggle navigation</span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                </button>
                                <a class="navbar-brand" href="#"><i class="glyphicon glyphicon-list"></i> Les produits</a>
                            </div>

                            <!-- Collect the nav links, forms, and other content for toggling -->
                            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-9">
                                <ul class="nav navbar-nav">
                                    <li class="active"><a href="#"><i class="glyphicon glyphicon-star"></i> Nouveautés</a></li>
                                    <li><a href="#"><i class="glyphicon glyphicon-star"></i> Meilleurs ventes</a></li>
                                    <li><a href="#"><i class="glyphicon glyphicon-star"></i> Promotions</a></li>
                                    <li><a href="#"><i class="glyphicon glyphicon-star"></i> Packs</a></li>
                                    <li><a href="#"><i class="glyphicon glyphicon-star"></i> Chèques cadeaux</a></li>
                                </ul>
                            </div>
                            <!-- /.navbar-collapse -->
                        </nav>
                    </div>

                    <div class="row-fluid">
                        <div class="">
                            <form role="search">
                                <div class="input-group">
                                    <input type="text" placeholder="Rechercher un produit, une catégorie..."
                                           name="search" class="form-control"/>
                                        <span class="input-group-btn">
                                          <button class="btn btn-search btn-primary"><i
                                                      class="glyphicon glyphicon-search"></i></button>
                                        </span>
                                </div>
                            </form>
                        </div>
                    </div>
                    <p></p>

                    <p></p>

                    <div class="row-fluid">
                        <div class="span3">
                            {% include 'HorusFrontBundle:Slots:leftmenu.html.twig' %}
                        </div>
                        <div class="span9">
                            {#{% include 'HorusSiteBundle:Slots:mainmenu.html.twig' %}#}
                            {% include 'HorusSiteBundle:Slots:flashdatas.html.twig' %}
                            <div class="maincontent">
                                {% block content %}
                                {% endblock %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <a class="scrollup">Scroll</a>

            {% if app.user.id is defined %}
                {% include 'HorusSiteBundle:Slots:connected.html.twig' %}
            {% endif %}
        </div>
    </div>
    <div id="footer">
        <div class="container text-center">
            <p class="muted credit">Horus CMF forked by <a href="https://github.com/HorusCMF/Shop">Symfomany</a></p>
        </div>
    </div>
    <div id="overlay" class="overlay hide">
        <img src="/images/495.GIF"/>
    </div>
    {% render controller('HorusSiteBundle:Layout:getIpVisitor') %}
{% endblock %}


{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('/js/ckeditor/ckeditor.js') }}"></script>
    <script src="http://damirfoy.com/iCheck/jquery.icheck.min.js?v=0.9.1"></script>
    <script src="http://davidstutz.github.io/bootstrap-multiselect/js/bootstrap-multiselect.js"></script>
    <script src="//code.jquery.com/ui/1.10.3/jquery-ui.js"></script>
    <script src="http://modernizr.com/downloads/modernizr-latest.js"></script>

    {% javascripts '@HorusSiteBundle/Resources/public/js/miniNotification.coffee' filter='closure' %}
    <script src="{{ asset_url }}" type="text/javascript"></script>
    {% endjavascripts %}

    <!--[if (lt IE 6)|(IE 7)]>
    {% javascripts '@HorusSiteBundle/Resources/public/js/nobrowser.coffee' filter='closure' %}
    <script src="{{ asset_url }}" type="text/javascript"></script>
    {% endjavascripts %}
    <![endif]-->

    <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

    {% javascripts '@HorusSiteBundle/Resources/public/js/main.coffee'  filter='closure' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}